page {
  width: 100%;
  background-color: #f5f5f5;
}

.slide-image {
  width: 100%;
}

.main1 {
  width: 100%;
}

.foritm {
  float: left;
  border-radius: 15px;
  border-style: solid;
  border-color: #e6efef;
  background-color: #f5f5f5;
  font-size: 16px;
}

.itemImage {
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
}

.itmTitle {
  width: 100%;
  margin-bottom: 5px;
  border-style: solid;
  border: solid #cbb3e1 1px;
  border-left-width: 0px;
  border-right-width: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}

.itmAmt {
  width: 100%;
  height: 60rpx;
  float: left;
  border: solid #cbb3e1 0px;
  font-size: 12px;
}

.itmSale {
  width: 50%;
  height: 60rpx;
  float: right;
  border: solid #cbb3e1 0px;
}

.itmTitle1 {
  height: 100%;
  width: 90%;
}

.itmAmt1 {
  height: 100%;
  line-height: 100%;
  float: left;
  text-decoration: line-through;
  font-style: oblique;
  color: coral;
  padding-left: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.itmAmt2 {
  height: 100%;
